<Window x:Class="OriginPoint_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OriginPoint_WPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="650" Width="1125" 
        WindowStyle="None" ResizeMode="NoResize"  
        AllowsTransparency="True" Background="{x:Null}" 
        FontFamily="Bahnschrift SemiCondensed" FontSize="13">

    <Border Background="White" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <!-- Logo Image -->
            <Image Source="/Img/OriginPointLogo.png" Grid.Column="1" Grid.Row="1" Height="22.5" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <!-- Window Control Buttons -->
            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click">
                    <Image Source="/Icons/minimise.ico" />
                </Button>
                <Button Style="{StaticResource WindowControlButton}" Click="CloseButton_Click">
                    <Image Source="/Icons/close.ico"/>
                </Button>
            </StackPanel>

            <!-- Navbar Buttons -->
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                <RadioButton Style="{StaticResource MenuSlider}" Content="Flat Sheet" IsChecked="True"/>
                <RadioButton Style="{StaticResource MenuSlider}" Content="Roll To Roll"/>
            </StackPanel>
            
            <!-- Settings Button -->
            <Button Grid.Column="1" Grid.Row="4" Style="{StaticResource WindowControlButton}" Width="20" Height="20" HorizontalAlignment="Left">
                <Image Source="/Icons/settings.ico"/>
            </Button>

            <!-- Bordered Canvas -->
            <Viewbox Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Margin="10,0,0,0">
                <Border BorderThickness="10" BorderBrush="Black" >
                    <Canvas Name="DrawingCanvas" Background="White"  Width="3200" Height="2030"/>
                </Border>
            </Viewbox>

            <!-- Bed Size label -->
            <TextBlock  Text="Bed size: 3200 x 2030" Margin="10,0,0,0" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Left" FontSize="15" Name="BedSizeLabel"/>


        </Grid>
    </Border>
</Window>
